<div class="top">
    <div class="headline">
        <h2>Kontakt</h2>					
    </div>
</div>
<div class="wrapper">
    <div class="left">
        <div class="map">
            <iframe class="lazy"  data-src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1217.1688673150747!2d18.147609506981286!3d53.15475595992186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47031380afcaee55%3A0x659d49d5c04e8660!2sStudio%20Fotograficzne%20LINDA!5e0!3m2!1spl!2spl!4v1595261051160!5m2!1spl!2spl"  name="mapa" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>
    <div class="right">
        <div class="wrapper">
            <div class="top">
                 <p>{{ site.description }}</p>
            </div>
            <div class="bottom">
                <div class="box">
                    <div class="inside-box-left">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="inside-box-right">
                       <p>{{global.contact.address}}</p> 
                    </div>
                </div>
                <div class="box">
                    <div class="inside-box-left">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="inside-box-right">
                        {% for item in global.contact.phones %}
                            <a href="tel:{{item.phone}}"><p>{{item.phone}}</p></a>
                        {% endfor %}
                    </div>
                </div>
                <div class="box">
                    <div class="inside-box-left">
                        <i class="far fa-clock"></i>
                    </div>
                    <div class="inside-box-right">
                        {% for item in global.contact.godziny_otwarcia %}
                            <p>Godziny otwarcia:</p>
                            <div class="row">
                                <p>{{item.zakres.dni}}</p> 
                                <p>{{item.zakres.godziny}}</p>                           
                            </div>

                        {% endfor %}
                    </div>
                </div>
                <div class="box">
                    <div class="inside-box-left">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="inside-box-right">
                        {% for item in global.contact.mail_list %}
                            <div class="row">
                                <a href="mailto:{{item.mail}}"><p>{{item.mail}}</p> </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="box">
                    <a href="{{global.contact.facebook}}">
                        <div class="inside-box-left">
                            <i class="fab fa-facebook-f"></i>
                        </div>
                        <div class="inside-box-right">
                        <p>Znajdź nas na Facebook’u</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footet__small">
    <p>COPYRIGHTS {{"now"|date('Y')}} Jakub & Paweł Chmielewscy</p>
</div>